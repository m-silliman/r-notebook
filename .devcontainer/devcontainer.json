{
  "name": "R Notebook Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "root",
  "forwardPorts": [8888],
  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",           // R language support
        "ms-toolsai.jupyter",        // Jupyter notebook support
        "ikuyadeu.r",                // R debugger, formatting
        "yzhang.markdown-all-in-one" // optional: better Markdown
      ]
    }
  }
}
